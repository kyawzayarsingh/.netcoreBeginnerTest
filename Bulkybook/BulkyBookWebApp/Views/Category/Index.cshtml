@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row mb-3">
        <div class="col-md-6">
            <h1>Categories List</h1>
        </div>
         <div class="col-md-6 mt-3 text-end">
             <a class="btn btn-success" asp-controller="Category" asp-action="Create">
                 Create New Category
             </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-stripsed table-dark">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-cid="@obj.Id" class="btn btn-primary">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-cid="@obj.Id" class="btn btn-danger ml-2">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
